rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null && request.auth.token.clerk_user_id == request.auth.uid;
    }

    // Tasks: allow read/write for authenticated users
    match /tasks/{taskId} {
      allow read, write: if isSignedIn();
    }

    // People: allow read/write for authenticated users
    match /people/{personId} {
      allow read, write: if isSignedIn();
    }
  }
}