rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all operations on tasks (using Clerk for auth, loose Firestore rules for development)
    match /tasks/{document} {
      allow read, write: if true;
    }
    
    // Allow all operations on people (using Clerk for auth, loose Firestore rules for development)
    match /people/{document} {
      allow read, write: if true;
    }
  }
}