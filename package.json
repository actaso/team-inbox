  "private": true,
  "scripts": {
    "dev": "FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099 FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "env:pull": "vercel env pull",
    "env:pull:dev": "vercel env pull --environment=development",
