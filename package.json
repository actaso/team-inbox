    "@tiptap/extension-image": "2.26.1",
    "@tiptap/react": "2.26.1",
    "@tiptap/starter-kit": "2.26.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.1.0",
    "firebase-admin": "12.7.0",
